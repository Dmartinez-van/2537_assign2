<%- include("templates/header")%>

<div class="flex flex-col">
  <div
    class="container max-w-sm mx-auto flex-1 flex flex-col items-center justify-center px-2"
  >
    <div class="bg-white px-6 py-8 rounded shadow-md text-black w-full z-1">
      <h1 class="mb-8 text-3xl text-center">Oops, error...</h1>
      <p class="mb-8 text-center"><%= errorDetails %></p>
      <form action="/signup" method="GET">
        <button
          type="submit"
          class="cursor-pointer border-2 border-gray-100 focus:outline-none bg-green-600 text-white font-bold tracking-wider block w-full p-2 rounded-lg focus:border-gray-700 hover:bg-green-700"
        >
          Go back
        </button>
      </form>
    </div>

    <div class="text-grey-dark mt-6">
      Already have an account?
      <a class="no-underline border-b border-blue text-blue" href="../login/">
        Log in </a
      >.
    </div>
  </div>
</div>

<%- include("templates/footer")%>
